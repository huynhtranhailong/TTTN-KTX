                                        else
                                            .title= articles[0].title.tonal
                                            span.createdDate= " (" + moment(articles[0].created).format("DD/MM/YYYY HH:mm") + ")"
                                else
                                    a(href="/tin-tuc/" + articles[0].created.getTime() + "")
                                        if(articles[0].title.tonal.length > indexTitle)
                                            .title= articles[0].title.tonal.substring(0, indexTitle) + "..."
                                            span.createdDate= " (" + moment(articles[0].created).format("DD/MM/YYYY HH:mm") + ")"
                                        else
                                            .title= articles[0].title.tonal
                                            span.createdDate= " (" + moment(articles[0].created).format("DD/MM/YYYY HH:mm") + ")"

                            .short-content
                                if(articles[0].abstract.length > indexAbs)
                                    p= articles[0].abstract.substring(0, indexAbs) + "..."
